# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# General
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Override tab indentation (no size specified)
[Makefile]
indent_style = tab
